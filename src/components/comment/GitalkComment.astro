---
type Props = {
  uid?: string;
};

const { uid } = Astro.props;
---

<div class="comments-container">
  <div id="gitalk-mainEl" data-uid={uid}></div>
</div>

<script>
  import Gitalk from "gitalk";
  import { GitalkConfig } from "@/consts";
  document.addEventListener("astro:page-load", () => {
    if (GitalkConfig) {
      const uid = document.getElementById("gitalk-mainEl")?.dataset.uid;
      if (!uid) {
        return;
      }
      const gitalk = new Gitalk({
        id: uid,
        ...GitalkConfig,
      });
      gitalk.render("gitalk-mainEl");
    }
  });
</script>

<style lang="scss" is:global>
  .gt-container {
    box-sizing: border-box;
    font-size: 1em;
    word-break: break-all;
    * {
      box-sizing: border-box;
    }
    .hide {
      display: none !important;
    }
    .gt-svg {
      display: inline-block;
      width: 1em;
      height: 1em;
      vertical-align: sub;
      svg {
        width: 100%;
        height: 100%;
        fill: #6190e8;
      }
    }
    .gt-ico {
      display: inline-block;
    }
    .gt-ico-text {
      margin-left: 0.3125em;
    }
    .gt-ico-github {
      width: 100%;
      height: 100%;
      .gt-svg {
        width: 100%;
        height: 100%;
      }
      svg {
        fill: var(--color-base-content);
      }
    }
    .gt-spinner {
      position: relative;
      &::before {
        content: "";
        box-sizing: border-box;
        position: absolute;
        top: 3px;
        width: 0.75em;
        height: 0.75em;
        margin-top: -0.1875em;
        margin-left: -0.375em;
        border-radius: 50%;
        border: 1px solid #fff;
        border-top-color: #6190e8;
        animation: gt-kf-rotate 0.6s linear infinite;
      }
    }
    .gt-loader {
      position: relative;
      border: 1px solid #999;
      animation: ease gt-kf-rotate 1.5s infinite;
      display: inline-block;
      font-style: normal;
      width: 1.75em;
      height: 1.75em;
      line-height: 1.75em;
      border-radius: 50%;
      &:before {
        content: "";
        position: absolute;
        display: block;
        top: 0;
        left: 50%;
        margin-top: -0.1875em;
        margin-left: -0.1875em;
        width: 0.375em;
        height: 0.375em;
        background-color: #999;
        border-radius: 50%;
      }
    }
    .gt-avatar {
      @apply avatar rounded;
      width: 3.125em;
      height: 3.125em;
    }
    .gt-avatar-github {
      width: 3em;
      height: 3em;
      cursor: pointer;
    }
    .gt-btn-loading {
      position: relative;
      margin-left: 0.5em;
      display: inline-block;
      width: 0.75em;
      height: 1em;
      vertical-align: top;
    }
    .gt-btn {
      @apply btn btn-sm btn-primary font-sans;
    }
    .gt-btn-login {
      margin-right: 0;
    }
    .gt-error {
      text-align: center;
      margin: 0.625em;
      color: #ff3860;
    }
    .gt-initing {
      padding: 1.25em 0;
      text-align: center;
    }
    .gt-initing-text {
      margin: 0.625em auto;
      font-size: 92%;
    }
    .gt-no-init {
      padding: 1.25em 0;
      text-align: center;
    }
    .gt-link {
      @apply text-primary smooth-underline;
    }
    .gt-meta {
      @apply relative flex items-center justify-between mb-2;
    }
    .gt-counts {
      margin: 0 0.625em 0 0;
    }
    .gt-user {
      .gt-user-inner {
        @apply btn btn-sm;
      }
      .gt-ico {
        margin: 0 0 0 0.3125em;
        svg {
          fill: var(--primary);
        }
      }
      .is--poping {
        .gt-ico {
          svg {
            fill: #6190e8;
          }
        }
      }
    }
    .gt-user-pic {
      width: 16px;
      height: 16px;
      vertical-align: top;
      margin-right: 0.5em;
    }
    .gt-user-inner {
      display: inline-block;
      cursor: pointer;
    }
    .gt-version {
      margin-left: 0.375em;
    }
    .gt-copyright {
      margin: 0 0.9375em 0.5em;
      border-top: 1px solid #e9e9e9;
      padding-top: 0.5em;
    }
    .gt-popup {
      @apply absolute right-0 top-4 bg-base-100 dropdown menu rounded-box shadow-sm z-20 animate-fade-in-down animate-300 animate-ease-in-out;
      .gt-action {
        cursor: pointer;
        display: block;
        margin: 0.5em 0;
        padding: 0 1.125em;
        position: relative;
      }
    }
    .gt-header {
      position: relative;
      display: flex;
    }
    .gt-header-textarea {
      @apply border border-base-300 p-4 w-full;
    }
    .gt-header-comment {
      flex: 1;
      margin-left: 1.25em;
    }
    .gt-header-preview {
      padding: 0.75em;
      border-radius: 5px;
      border: 1px solid rgba(0, 0, 0, 0.1);
    }
    .gt-header-controls {
      @apply flex items-center gap-2 mt-2;
      a {
        @apply text-primary underline underline-offset-2 decoration-dotted smooth-underline;
      }
    }
    .gt-comments {
      padding-top: 1.25em;
    }
    .gt-comments-null {
      text-align: center;
    }
    .gt-comments-controls {
      margin: 1.25em 0;
      text-align: center;
    }
    .gt-comment {
      position: relative;
      padding: 0.625em 0;
      display: flex;
      .gt-comment-content {
        flex: 1;
        margin-left: 1.25em;
        overflow: auto;
      }
    }
    .gt-comment-block-1 {
      float: right;
      height: 1.375em;
      width: 2em;
    }
    .gt-comment-block-2 {
      float: right;
      height: 1.375em;
      width: 4em;
    }
    .gt-comment-username {
      font-weight: 500;
      text-decoration: none;
      &:hover {
        text-decoration: underline;
      }
    }
    .gt-comment-text {
      margin-left: 0.5em;
    }
    .gt-comment-date {
      margin-left: 0.5em;
    }
    .gt-comment-like {
      top: 0;
      right: 2em;
    }
    .gt-comment-body {
      .email-hidden-toggle {
        a {
          display: inline-block;
          height: 12px;
          padding: 0 9px;
          font-size: 12px;
          font-weight: 600;
          line-height: 6px;
          text-decoration: none;
          vertical-align: middle;
          border-radius: 1px;
        }
      }
      .email-hidden-reply {
        display: none;
        white-space: pre-wrap;
        .email-signature-reply {
          padding: 0 15px;
          margin: 15px 0;
        }
        &.expanded {
          display: block;
        }
      }
    }
    .gt-comment-admin {
      .gt-comment-content {
        //
      }
    }
  }
  .gt-container .gt-link-counts,
  .gt-container .gt-link-project {
    text-decoration: none;
  }
  .gt-container .gt-comment-like,
  .gt-container .gt-comment-edit,
  .gt-container .gt-comment-reply {
    position: absolute;
    height: 1.375em;
  }
  .gt-container .gt-comment-like:hover,
  .gt-container .gt-comment-edit:hover,
  .gt-container .gt-comment-reply:hover {
    cursor: pointer;
  }
  .gt-container .gt-comment-edit,
  .gt-container .gt-comment-reply {
    top: 0;
    right: 0;
  }

  @keyframes gt-kf-rotate {
    0% {
      transform: rotate(0);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
