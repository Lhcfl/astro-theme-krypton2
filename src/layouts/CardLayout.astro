---
import MarkdownText from "@/components/MarkdownText.astro";
import BaseLayout from "./BaseLayout.astro";

type LayoutProps = Parameters<typeof BaseLayout>[0];

type Props = {
  hasSidebar?: boolean;
  useMarkdown?: boolean;
} & LayoutProps;

const {
  title,
  hasSidebar = false,
  useMarkdown = false,
  ...props
} = Astro.props;
---

<BaseLayout
  title={title}
  hasSidebar={hasSidebar}
  class="flex gap-2 w-full"
  {...props}
>
  <div class="flex-grow-1 card card-lg rounded-lg">
    <article>
      <h1 class="page-title text-3xl font-bold">
        {useMarkdown ? <MarkdownText text={title} inline={true} /> : title}
      </h1>
      <div>
        <slot />
      </div>
    </article>
  </div>
  {hasSidebar && <slot name="sidebar" slot="sidebar" />}
</BaseLayout>
