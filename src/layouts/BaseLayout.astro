---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FloatButtons from "@/components/FloatButtons.astro";
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";

type Props = {
  title: string;
  description: string;
  image?: ImageMetadata;
  maxw?: string;
  hasSidebar?: boolean;
} & HTMLAttributes<"div">;

const {
  title,
  description,
  image,
  class: className,
  hasSidebar,
  ...props
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="overflow-y-scroll" class:list={[{ "has-sidebar": hasSidebar }]}>
    <div
      class="app bg-surface text-content flex justify-center max-md:flex-col"
    >
      {
        // div.app generates Header and the main content area.
        // For md screen:           For sm screen:
        //  ┌──────┬──────┬───────┐  ┌──────┐
        //  │      │      │       │  │header│
        //  │      │ main │       │  ├──────┤
        //  │header│      │       │  │      │
        //  │      ├──────┤sidebar│  │ main │
        //  │      │footer│       │  │      │
        //  └──────┴──────┴───────┘  ├──────┤
        //                           │footer│
        //                           └──────┘
      }
      <Header class="flex-[0_0_auto]" />
      <div class="main-and-sidebar flex-grow flex max-w-270">
        {
          // 2 columns: main and sidebar
          //  ┌──────┬───────┐
          //  │      │       │
          //  │ main │       │
          //  │      │       │
          //  ├──────┤sidebar│
          //  │footer│       │
          //  └──────┴───────┘
          // max width = main(200) + sidebar(70)
        }
        <div
          class="main-and-footer max-w-full min-h-screen overflow-x-hidden"
          un-flex="~ col grow md:(grow-0 shrink basis-200)"
        >
          <main class=`flex-grow relative p-4 md:pt-6 ${className}` {...props}>
            <slot />
          </main>
          <Footer />
        </div>
        <div
          class="sidebar-container hidden print:hidden!
              flex-(grow-0 shrink-0)
              md:(block relative pt-6 has-sidebar:w-50)
              lg:(flex-shrink-0 has-sidebar:w-70)
              xl:w-70
              max-md:show-toc:(block fixed bottom-2 w-full animate-(fade-in-up duration-300 ease-in-out))"
        >
          <div
            class="sticky top-6 bg-surface md:px-0 max-md:show-toc:(px-2 pt-4 border-(t base-300))"
            un-overflow="y-auto x-visible"
          >
            <div>
              <slot name="sidebar" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <FloatButtons />
  </body>
</html>
